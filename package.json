{
  "name": "srpc",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "release": "turbo run release:npm release:jsr --filter=./packages/**",
    "release:npm": "turbo run release:npm --filter=./packages/**",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release-packages": "turbo build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "prettier": "^3.2.5",
    "turbo": "^2.3.3",
    "typescript": "5.9.3"
  },
  "packageManager": "pnpm@10.22.0",
  "engines": {
    "node": ">=22"
  }
}
