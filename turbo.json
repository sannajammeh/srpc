{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "release:npm": {
      "dependsOn": ["build", "test"]
    },
    "release:jsr": {
      "dependsOn": ["test"]
    },
    "version": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
